%main.container
  %h1.general-title-margin Сatalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          Newest first
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            %a{href: "#"} Newest first
          %li
            %a{href: "#"} Popular first
          %li
            %a{href: "#"} Price: Low to hight
          %li
            %a{href: "#"} Price: Hight to low
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        = link_to books_path, class: "filter-link" do
          All
          %span.badge.general-badge= Book.count
      - Category.all.each do |category|
        %li.mr-35
          = link_to books_path(books_by_category: category.title),
            class: "filter-link" do
            = "#{category.title}"
            %span.badge.general-badge= category.books.count
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Filter by category
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"} Newest first
        %li
          %a{href: "#"} Popular first
        %li
          %a{href: "#"} Price: Low to hight
        %li
          %a{href: "#"} Price: Hight to low
    %p.lead.small.mb-10 Sort by
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          %a{href: "#"} Newest first
        %li
          %a{href: "#"} Popular first
        %li
          %a{href: "#"} Price: Low to hight
        %li
          %a{href: "#"} Price: Hight to low
  .mb-120
    - @books.each_slice(4) do |four_books|
      .row
        - four_books.each do |book|
          .col-xs-6.col-sm-3
            .general-thumb-wrap
              .thumbnail.general-thumbnail
                - if book.cover.nil?
                  %i.fa.fa-book.fa-4x{'aria-hidden': "true"}
                - else
                .thumb-hover
                  .general-thumb-link-wrap
                    = link_to book_path(book.id), class: "thumb-hover-link" do
                      %i.fa.fa-eye.thumb-icon{ 'aria-hidden': "true" }
                    %a.thumb-hover-link{href: "#"}
                      %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title Android Programming for Beginners
          %p.font-16.in-gold-500 €28.50
          %span.divider-sm
          %p.lead.small John Horton
    .text-center
      %button.btn.btn-primary View More
%script{src: "https://use.fontawesome.com/67602d7308.js"}
%script{src: "../../javascripts/jquery.js"}
%script{src: "../../javascripts/bootstrap.js"}
